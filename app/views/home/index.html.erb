<div class="well">
	<h4>The universe is the totality of things that exits</h4>
	<p>This website is dedicated to questions about history of universe</p>
</div>

<div class="container">

	<% @questions.each do |q|%>
	<div class="media">
		<div class="media-left">
				<a href="#">
				<img class="media-object" src="<%= q.gravatar %>">
				</a>
		</div>
				<div class="media-body">
					<h4 class="media-heading"><%= q.email %> asked: </h4>
					<div><%= time_ago_in_words q.created_at %></div>
					<%= q.body %>
				</div>
	</div>
	<% end %>

</div>
